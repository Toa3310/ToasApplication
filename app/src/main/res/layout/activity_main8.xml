<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 郵便番号ラベル -->
    <TextView
        android:id="@+id/labelPostal"
        android:text="郵便番号（3桁 - 4桁）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 郵便番号（上3桁） -->
    <EditText
        android:id="@+id/editTextPostal1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/textHyphen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelPostal"
        app:layout_constraintWidth_percent="0.4" />

    <!-- ハイフン -->
    <TextView
        android:id="@+id/textHyphen"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/editTextPostal1"
        app:layout_constraintBottom_toBottomOf="@id/editTextPostal1"
        app:layout_constraintStart_toEndOf="@id/editTextPostal1"
        app:layout_constraintEnd_toStartOf="@id/editTextPostal2" />

    <!-- 郵便番号（下4桁） -->
    <EditText
        android:id="@+id/editTextPostal2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0000"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/editTextPostal1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textHyphen"
        app:layout_constraintTop_toTopOf="@id/editTextPostal1"
        app:layout_constraintWidth_percent="0.4" />

    <!-- 検索ボタン -->
    <Button
        android:id="@+id/buttonSearch"
        android:text="検索"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextPostal1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 結果表示 -->
    <TextView
        android:id="@+id/textViewResult"
        android:text="結果がここに表示されます"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>